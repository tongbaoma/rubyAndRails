<h1>ユーザリスト</h1>

<table border="1" width="800">
  <tr>
    <th>名前</th>
    <th>パスワード</th>
    <th>Salt</th>
	<th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.hashed_password %></td>
    <td><%=h user.salt %></td>
    <td><%= link_to '明細', user %></td>
    <td><%= link_to '編集', edit_user_path(user) %></td>
    <td><%= link_to '削除', user, :confirm => 'Are you sure?',:method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'ユーザの追加', new_user_path %>