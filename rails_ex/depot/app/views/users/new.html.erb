<div class="depot-from">
<% form_for(@user) do |f| %>
<fieldset>
   <legend>情報を入力してください！！！</legend>
   <div>
    <%= f.label :name %>:
    <%= f.text_field :name,:size=>40 %>
    </div>
  <div>
    <%= f.label :Password %>:
    <%= f.text_field :hashed_password ,:size=>40%>
  </div>
  <div>
    <%= f.label :salt %>:
    <%= f.text_field :salt ,:size=>40%>
  </div>
  <div>
    <%= f.submit "新規ユーザ", :class => "submit" %>
  </div>
</fieldset>
<% end %>
</div>